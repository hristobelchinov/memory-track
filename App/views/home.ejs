<div class="hero">
  <div class="hero-overlay">
  <h1 style="color: #000000e9;">Welcome to Memory Track</h1>
  <p style="color: #000000e9;">A simple application to manage and keep memories</p>
  </div>
  <% if (locals.currentUser) { %>
    <a href="/user/<%= currentUser.id %>" class="btn btn-accent"> Profile</a>
<% } else { %> 
  <a href="/auth/signup" class="btn btn-accent">Get Started</a>
<% } %>
</div>

<div class="timeline-container">

  <div class="form-container">
      <h2 id="bruh">Add Your Memory</h2>
      <form>
          <label for="title">Title</label>
          <input type="text" id="title" name="title" placeholder="Enter title">

          <label for="description">Description</label>
          <textarea id="description" name="description" placeholder="Enter description"></textarea>
          <label for="date">Date</label>
          <input type="date" id="date" name="date">

          <label for="image">Image</label>
          <input type="file" id="image" name="image">

          <button type="submit">Add Memory</button>
      </form>
  </div>
</div>

<% if (locals.posts) { %>
  <div style="background-color: black;">
    <% for( let i = 0; i < locals.posts.length; i++ ) { %>
      <div class="post">
        <h2><%= locals.posts[i].title %></h2>
        <p><%= locals.posts[i].content %></p>
        <p><%= locals.posts[i].createdAt %></p>
        <% if (locals.currentUser && locals.currentUser.id === locals.posts[i].userId) { %>
          <a href="/post/<%= locals.posts[i].id %>/edit" class="btn btn-accent">Edit</a>
          <form action="/post/<%= locals.posts[i].id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        <% } %>
      </div>

    <% } %>
  </div>
<% } %>